{{#if search}}
    <h1>Você está buscando por: <span>{{search}}</span></h1>
{{else}}
    <h1>Meus Pensamentos</h1>
{{/if}}

<a href="/toughts/new-tought" class="btn btn-primary">Novo Pensamento</a>

<form action="/toughts/search-tought" method="post" class="d-flex align-items-center">
    <div class="form-control">
        <input type="text" id="search" name="search" placeholder="Buscar..." value="{{search}}">
    </div>
    <input type="submit" value="Buscar">
</form>

<ul id="toughts">
    {{#each toughts}}
        <li>
            <h3>{{this.dataValues.title}}</h3>
            <div class="actions">
                <a href="/toughts/update-tought/{{this.dataValues.id}}">
                    <i class="bi bi-pencil"></i>
                </a>
                <a href="/toughts/delete-tought/{{this.dataValues.id}}">
                    <i class="bi bi-trash3"></i>
                </a>
            </div>
        </li>
    {{/each}}
</ul>